extends layout

block content
  if user
    form.generic-container(action="", method="post") 
      .form-group
        label(for="title") Message title
        input#title(type="text", name="title")
      .form-group
        label(for="message") Message content
        textarea#message(name="message", cols="30", rows="10") 
      button(type="submit") Submit
    if errors
      ul 
        each error in errors
          li #{ error.msg }
